{
  "name": "next-starter",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest src --coverage",
    "test-watch": "jest src --watch --coverage",
    "build": "npm run clean && next build",
    "start-dev": "next",
    "start-server-test": "BUILD_ENV=test npm run build && NODE_ENV=production node ./server.js",
    "start-server-production": "BUILD_ENV=production npm run build && NODE_ENV=production node ./server.js",
    "clean": "rm -rf out && rm -rf .next",
    "eslint": "eslint --ext .js,jsx,ts,tsx .",
    "eslint-fix": "eslint --ext .js,jsx,ts,tsx . --fix",
    "stylelint": "stylelint './src/**/*.jsx'",
    "deploy": "npm run build && next export",
    "deploy-production": "npm install && NODE_ENV=production BUILD_ENV=production npm run deploy",
    "deploy-test": "BUILD_ENV=test npm run deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shianqi/next-starter.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shianqi/next-starter/issues"
  },
  "homepage": "https://github.com/shianqi/next-starter#readme",
  "importSort": {
    ".js, .jsx, .es6, .es": {
      "parser": "babylon",
      "style": "module-scoped",
      "options": {}
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module-scoped",
      "options": {}
    }
  },
  "jest": {
    "moduleNameMapper": {
      "^CONFIG/(.*)$": "<rootDir>/config/$1"
    }
  },
  "dependencies": {
    "@babel/polyfill": "^7.7.0",
    "@material-ui/core": "^4.6.1",
    "@material-ui/styles": "^4.6.0",
    "@zeit/next-typescript": "^1.1.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "next": "^9.1.3",
    "normalize.css": "^8.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.4",
    "redux-actions": "^2.6.5",
    "redux-batched-actions": "^0.4.1",
    "redux-control": "^0.2.2",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.4.1",
    "url-parse": "^1.4.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@types/lodash": "^4.14.148",
    "@types/react": "^16.9.11",
    "@types/react-redux": "^7.1.5",
    "@types/redux-actions": "^2.6.1",
    "@types/redux-logger": "^3.0.7",
    "@types/styled-components": "^4.4.0",
    "@types/styled-jsx": "^2.2.8",
    "@types/url-parse": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "babel-eslint": "^10.0.2",
    "babel-plugin-styled-components": "^1.10.6",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "raw-loader": "^3.1.0",
    "redux-logger": "^3.0.6",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
    "svg-sprite-loader": "4.1.3",
    "svgo": "^1.3.2",
    "svgo-loader": "^2.2.1",
    "typescript": "^3.7.2"
  }
}

{
  "name": "next-starter",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest src --coverage",
    "test-watch": "jest src --watch --coverage",
    "build": "npm run clean && next build",
    "start-dev": "next",
    "start-server-test": "BUILD_ENV=test npm run build && NODE_ENV=production node ./server.js",
    "start-server-production": "BUILD_ENV=production npm run build && NODE_ENV=production node ./server.js",
    "clean": "rm -rf out && rm -rf .next",
    "eslint": "eslint --ext .js,jsx src",
    "eslint-fix": "eslint --ext .js,jsx src --fix",
    "stylelint": "stylelint './src/**/*.jsx'",
    "deploy": "npm run build && next export",
    "deploy-production": "npm install && NODE_ENV=production BUILD_ENV=production npm run deploy",
    "deploy-test": "BUILD_ENV=test npm run deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shianqi/next-starter.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shianqi/next-starter/issues"
  },
  "homepage": "https://github.com/shianqi/next-starter#readme",
  "importSort": {
    ".js, .jsx, .es6, .es": {
      "parser": "babylon",
      "style": "module-scoped",
      "options": {}
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module-scoped",
      "options": {}
    }
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@material-ui/core": "^4.2.1",
    "@material-ui/styles": "^4.2.1",
    "@zeit/next-typescript": "^1.1.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "next": "^8.0.4",
    "normalize.css": "^8.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "redux": "^4.0.4",
    "redux-actions": "^2.6.5",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.3.2",
    "url-parse": "^1.4.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@types/styled-components": "^4.1.18",
    "babel-eslint": "^10.0.2",
    "babel-plugin-styled-components": "^1.10.6",
    "eslint": "^6.1.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-config-standard-react": "^8.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-class-property": "^1.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.8.0",
    "raw-loader": "^3.1.0",
    "redux-logger": "^3.0.6",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
